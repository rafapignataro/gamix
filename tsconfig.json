{
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
  },
  "include": [
    "src/**/*",
    "public/**/*",
  ]
}