{
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@gamix/client": [
        "src/core/client"
      ],
      "@gamix/server": [
        "src/core/server"
      ],
      "@gamix/types": [
        "src/core/types"
      ],
    }
  },
  "include": [
    "src/**/*",
    "public/**/*",
  ]
}